{
    "name": "noia-master",
    "version": "1.2.0",
    "description": "NOIA Master Node Software Suite.",
    "repository": "git@github.com:noia-network/noia-master.git",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "start": "node --max-old-space-size=8192 -r ts-node/register/transpile-only src/index.ts",
        "build": "tsc",
        "pretest": "tsc -p . --noEmit",
        "test": "npm run tslint && echo Warning: jest tests are skipped.",
        "posttest": "npm run prettier",
        "watch": "tsc -w",
        "tslint": "tslint --project . --config ./tslint.json && echo Successfully passed tslint test.",
        "prettier": "prettier \"src/**/*\" -l"
    },
    "keywords": [],
    "author": {
        "name": "NOIA Network Limited"
    },
    "license": "LGPL-2.1",
    "devDependencies": {
        "@types/jest": "24.0.22",
        "chai": "4.2.0",
        "jest": "24.9.0",
        "mocha": "6.2.2",
        "prettier": "1.18.2",
        "ts-jest": "24.1.0",
        "ts-node": "8.4.1",
        "tslint": "5.11.0",
        "typescript": "3.7.2"
    },
    "dependencies": {
        "@noia-network/protocol": "^1.3.0",
        "@noia-network/webrtc-direct-client": "^1.0.8",
        "@types/crypto-js": "3.1.43",
        "@types/express": "4.17.2",
        "@types/fs-extra": "8.0.1",
        "@types/geoip-lite": "1.1.29",
        "@types/lokijs": "1.5.2",
        "@types/node": "12.12.5",
        "@types/node-fetch": "2.5.3",
        "@types/ping": "0.2.0",
        "@types/request": "2.48.3",
        "@types/request-promise-native": "1.0.17",
        "@types/vorpal": "1.12.0",
        "@types/ws": "6.0.3",
        "chalk": "3.0.0",
        "create-torrent": "4.4.1",
        "crypto-js": "3.1.9-1",
        "density-clustering": "1.3.0",
        "express": "4.17.1",
        "fs-chunk-store": "2.0.1",
        "fs-extra": "8.1.0",
        "geoip-lite": "1.3.8",
        "geolib": "2.0.24",
        "getdomain": "1.3.1",
        "https": "1.0.0",
        "inherits": "2.0.4",
        "ip": "1.1.5",
        "ip-to-int": "0.3.1",
        "ipfs": "0.39.0",
        "lokijs": "1.5.8",
        "node-fetch": "2.6.0",
        "once": "1.4.0",
        "parse-torrent": "7.0.1",
        "ping": "0.2.2",
        "protobufjs": "6.8.8",
        "request": "2.88.0",
        "request-promise-native": "1.0.8",
        "sha1": "1.1.1",
        "strict-event-emitter-types": "2.0.0",
        "tslib": "1.10.0",
        "vorpal": "1.12.0",
        "wrtc": "0.4.2",
        "ws": "7.2.0"
    },
    "files": [
        "dist",
        "**/*.md",
        "@types",
        "!/examples"
    ],
    "jest": {
        "transform": {
            "^.+\\.(ts|tsx)?$": "ts-jest"
        },
        "testEnvironment": "node",
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts|tsx)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
