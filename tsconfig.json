{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "declaration": true,
        "inlineSourceMap": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "noImplicitAny": true,
        "strict": true,
        "lib": ["dom", "es7"]
    },
    "include": ["src/**/*"]
}
